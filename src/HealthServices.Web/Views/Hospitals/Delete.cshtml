@model HealthServices.Application.Hospitals.Dtos.HospitalDto

@{
    ViewData["Title"] = "Delete Hospital";
}

<div>
    <h2>Delete Hospital</h2>
    <h4>Are you sure you want to delete this hospital?</h4>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.AddressLine1<br />
            @if (Model.AddressLine2 != null)
            {
                @Model.AddressLine2<br />
            }
            @Model.AddressCity, @Model.AddressState  @Model.AddressZipCode
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            <partial name="_FormattedPhoneNumber" model="@Model.PhoneNumber" />
        </dd>
    </dl>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
    </form>
</div>