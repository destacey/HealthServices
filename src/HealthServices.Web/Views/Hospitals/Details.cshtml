@model HealthServices.Application.Hospitals.Dtos.HospitalDto

@{
    ViewData["Title"] = "Hospital Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-light">
        <li class="breadcrumb-item"><a asp-action="Index">Hospital List</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div>
    <h2>@Model.Name</h2>
    <h6 class="text-muted font-italic">Hospital Details</h6>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.AddressLine1<br />
            @if (Model.AddressLine2 != null)
            {
                @Model.AddressLine2<br />
            }
            @Model.AddressCity, @Model.AddressState  @Model.AddressZipCode
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            <partial name="_FormattedPhoneNumber" model="@Model.PhoneNumber" />
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
</div>